    "@types/node": "25.2.3",
    "@monorepo/cli": "workspace:*",
    "eslint": "10.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "tslib": "2.8.1",
    "turbo": "2.8.5",
    "typescript": "5.9.3"
